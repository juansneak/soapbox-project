{{page-title "Trending"}}
<div class="main-wrapper">

  <h1>Trending GIFS</h1>

  <FormFilter
    @limit={{this.limit}}
    @rating={{this.rating}}
    @offset={{this.offset}}
    @ratingOptions={{this.ratingOptions}}
    @changeRating={{this.changeRating}}
    @filterAction={{updateModel}}
  />

  <Gif::GifList @gifs={{this.model}}/>
</div>

